{
  "name": "www",
  "description": "Source code for www.carnesen.com",
  "private": true,
  "scripts": {
    "build": "./scripts/build.js && NODE_ENV=production webpack --bail",
    "build:watch": "./scripts/build.js && webpack-dev-server --content-base dist/",
    "lint": "eslint src webpack.config.babel.js",
    "lint:fix": "npm run lint -- --fix",
    "start": "./server.js",
    "test": "npm run lint && npm run build && npm run test:unit",
    "test:unit": "mocha --require .before-tests.js src/**/*-test.js"
  },
  "dependencies": {
    "koa": "2.2.0",
    "koa-static": "3.0.0"
  },
  "devDependencies": {
    "@carnesen/aws": "*",
    "@carnesen/styles": "0.0.1",
    "babel-core": "6.18.2",
    "babel-loader": "6.2.7",
    "babel-polyfill": "6.16.0",
    "babel-preset-es2015": "6.18.0",
    "babel-preset-react": "6.16.0",
    "babel-register": "6.18.0",
    "chai": "3.5.0",
    "css-loader": "0.25.0",
    "enzyme": "2.5.1",
    "eslint": "3.9.1",
    "eslint-config-carnesen": "1.0.5",
    "file-loader": "0.9.0",
    "fs-extra": "1.0.0",
    "material-ui": "0.16.1",
    "mocha": "3.1.2",
    "react": "15.3.2",
    "react-addons-test-utils": "15.3.2",
    "react-dom": "15.3.2",
    "react-tap-event-plugin": "1.0.0",
    "roboto-fontface": "0.6.0",
    "style-loader": "0.13.1",
    "webpack": "1.13.3",
    "webpack-dev-server": "1.16.2"
  },
  "license": "MIT"
}
